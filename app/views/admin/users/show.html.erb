<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<table class="table">
  <thead>
    <tr>
      <th><%= I18n.t("title") %></th>
      <th><%= I18n.t("content") %></th>
      <th><%= I18n.t("tag") %></th>
      <th><%= I18n.t("start_time") %></th>
      <th><%= I18n.t("end_time") %></th>
      <th><%= I18n.t("piority") %></th>
      <th><%= I18n.t("state") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.tag %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= I18n.t(task.piority) %></td>
        <td><%= I18n.t(task.state) %></td>
        <td><%= link_to I18n.t("show"), task, class: "btn btn-success" %></td>
        <td><%= link_to I18n.t("edit"), edit_task_path(task), class: "btn btn-info" %></td>
        <td><%= link_to I18n.t("destroy"), task, method: :delete, data: { confirm: I18n.t("confirm") }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<%= link_to "Edit", edit_admin_user_path(@user) %> |
<%= link_to "Back", admin_users_path %>
