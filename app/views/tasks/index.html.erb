<p id="notice"><%= notice %></p>

<h1><%= I18n.t("tasks") %></h1>
<%= form_tag '/tasks/search' do %>
  <%= text_field_tag 'title',nil , placeholder: "標題", class:'tbx_normal' %>
  <%= submit_tag "查詢", class:'btn_big btn_orange'%>
<% end %>

<%= form_tag '/tasks/search' do %>
  <select name="state">
  <option value="pending"><%= I18n.t("pending")%></option>
  <option value="processing"><%= I18n.t("processing")%></option>
  <option value="finished"><%= I18n.t("finished")%></option>
</select>
  <%= submit_tag "查詢", class:'btn_big btn_orange'%>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= I18n.t("title") %></th>
      <th><%= I18n.t("content") %></th>
      <th><%= I18n.t("tag") %></th>
      <th>User</th>
      <th><%= I18n.t("start_time") %></th>
      <th><%= I18n.t("end_time") %></th>
      <th><%= I18n.t("piority") %></th>
      <th><%= I18n.t("state") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.tag %></td>
        <td><%= task.user_id %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= I18n.t(task.piority) %></td>
        <td><%= I18n.t(task.state) %></td>
        <td><%= link_to I18n.t("show"), task %></td>
        <td><%= link_to I18n.t("edit"), edit_task_path(task) %></td>
        <td><%= link_to I18n.t("destroy"), task, method: :delete, data: { confirm: I18n.t("confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t("create_task"), new_task_path %>
<%= link_to I18n.t("order_by_end_time"), "/tasks/order/end_time" %>
<%= link_to I18n.t("order_by_piority"), "/tasks/order/piority" %>
